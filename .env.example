# AWS S3 Configuration for Image Uploads
# Add these variables to your .env.local or .env file

# AWS Region (e.g., us-east-1, us-west-2, ap-south-1)
NEXT_PUBLIC_AWS_REGION=us-east-1

# S3 Bucket Name
NEXT_PUBLIC_AWS_S3_BUCKET=your-bucket-name

# AWS Access Key ID
NEXT_PUBLIC_AWS_ACCESS_KEY_ID=your-access-key-id

# AWS Secret Access Key
NEXT_PUBLIC_AWS_SECRET_ACCESS_KEY=your-secret-access-key

# CloudFront Domain (Optional - for CDN delivery)
# If not set, direct S3 URLs will be used
NEXT_PUBLIC_AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
